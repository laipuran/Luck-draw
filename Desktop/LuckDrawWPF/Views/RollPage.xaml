<Page x:Class="LuckDraw.RollPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LuckDraw"
      mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
        <Button Style="{StaticResource DefaultButtonStyle}" Width="50" Name="GetNumberButton" FontSize="18" Click="GetNumberButton_Click" Content="开始"></Button>
        <TextBlock x:Name="NumberTextBlock" FontSize="36" Margin="0,20,0,0"></TextBlock>
    </StackPanel>
</Page>